{
  "name": "cc-marketplace",
  "owner": {
    "name": "Kazuki Hashimoto",
    "email": "setouchi.develop@gmail.com"
  },
  "metadata": {
    "description": "A marketplace bundle for PR creation and management tools.",
    "version": "1.2.0"
  },
  "plugins": [
    {
      "name": "gh",
      "source": "./packages/gh",
      "description": "Intelligent PR creation tool that analyzes your changes and creates well-structured pull requests.",
      "version": "2.0.0",
      "author": {
        "name": "Kazuki Hashimoto"
      },
      "homepage": "https://github.com/setouchi-h/cc-marketplace",
      "repository": "https://github.com/setouchi-h/cc-marketplace",
      "license": "MIT",
      "keywords": ["pr", "pull-request", "github", "git", "automation"],
      "category": "productivity"
    },
    {
      "name": "statusline",
      "source": "./packages/statusline",
      "description": "Installs a shell status line for Claude Code showing branch, model, cost, duration, diff lines, and an optional quote.",
      "version": "1.1.1",
      "author": {
        "name": "Kazuki Hashimoto"
      },
      "homepage": "https://github.com/setouchi-h/cc-marketplace",
      "repository": "https://github.com/setouchi-h/cc-marketplace",
      "license": "MIT",
      "keywords": ["claude", "statusline", "shell", "productivity"],
      "category": "productivity"
    },
    {
      "name": "git",
      "source": "./packages/git",
      "description": "Git workflow automation tool with git-flow style commit messages and automatic push.",
      "version": "1.0.0",
      "author": {
        "name": "Kazuki Hashimoto"
      },
      "homepage": "https://github.com/setouchi-h/cc-marketplace",
      "repository": "https://github.com/setouchi-h/cc-marketplace",
      "license": "MIT",
      "keywords": [
        "git",
        "commit",
        "git-flow",
        "conventional-commits",
        "automation"
      ],
      "category": "productivity"
    },
    {
      "name": "xcode",
      "source": "./packages/xcode",
      "description": "Build and run Xcode projects on simulators or physical devices from the command line.",
      "version": "1.0.0",
      "author": {
        "name": "Kazuki Hashimoto"
      },
      "homepage": "https://github.com/setouchi-h/cc-marketplace",
      "repository": "https://github.com/setouchi-h/cc-marketplace",
      "license": "MIT",
      "keywords": [
        "xcode",
        "ios",
        "simulator",
        "build",
        "run",
        "xcodebuild"
      ],
      "category": "productivity"
    }
  ]
}
